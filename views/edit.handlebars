<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <a href="/profile" class="float-left"><i class="fas fa-angle-left text-secondary backSize"></i></a>
            <p class="mb-0"><i class="fas fa-user pr-2"></i>EDIT PROFILE</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 col-sm-12 divider">
                    <div class="card">
                        {{#if userData.isFThumnailDefault}}
                        <img class="img-thumbnail" src="{{userData.fThumbnail}}" alt="ImageProfile">
                        {{else}}
                        <img class="img-thumbnail" src="{{userData.gThumbnail480}}" alt="ImageProfile">
                        {{/if }}
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <h5 class="card-title">{{userData.firstName}} {{userData.lastName}}</h5>
                                </li>
                                <li class="list-group-item">
                                    <h6 class="card-text tilt">{{userData.email}}</h6>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 col-sm-12">
                    <form action="/user/updateProfile/{{userData.id}}" method="POST">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group row">
                                    <h6 class="col-md-6 col-sm-4 col-form-label">First name</h6>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input type="text" value="{{userData.firstName}}" class="form-control" name="firstName">
                                    </div>
                                </div>
                                <hr class="my-2">
                                <div class="form-group row">
                                    <h6 class="col-md-6 col-sm-4 col-form-label">Last name</h6>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input type="text" value="{{userData.lastName}}" class="form-control" name="lastName">
                                    </div>
                                </div>
                                <hr class="my-2">
                                <div class="form-group row">
                                    <h6 class="col-md-6 col-sm-4 col-form-label">Gender</h6>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input type="text" value="{{userData.gender}}" class="form-control" name="gender">
                                    </div>
                                </div>
                                <hr class="my-2">
                                <div class="form-group row">
                                    <h6 class="col-md-6 col-sm-4 col-form-label">Birth Date</h6>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input value="{{userData.birthdate}}" id="datepicker" class="form-control" name="birthdate">
                                    </div>
                                </div>
                                <hr class="my-2">
                                <div class="form-group row">
                                    <h6 class="col-md-6 col-sm-4 col-form-label">Hometown</h6>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input type="text" value="{{userData.hometown}}" class="form-control" name="hometown">
                                    </div>
                                </div>
                                <hr class="my-2">
                                <div class="form-group row mb-0">
                                    <h6 class="col-md-6 col-sm-4 col-form-label">Location</h6>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input type="text" value="{{userData.location}}" class="form-control" name="location">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body mt-3 border border-warning deleteBarPadding">
                            <div class="card-body p-1 pl-2">
                                <div class="row">
                                    <div class="d-md-block d-sm-none col-md-6">
                                        <h6 class=" col-form-label">Save Changes</h6>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <button type="button" class="btn btn-primary w-100" data-toggle="modal"
                                            data-target="#saveModal">
                                            Save
                                        </button>
                                    </div>

                                    {{!-- Modal --}}
                                    <div class="modal" id="saveModal" tabindex="-1" role="dialog" aria-labelledby="saveModalTitle"
                                        aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-warning" id="exampleModalLongTitle">Warning</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to SAVE
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Save</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>